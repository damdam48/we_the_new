{% extends 'base.html.twig' %}

{% block title %}
	Administration des commandes
	{{ parent() }}

{% endblock %}

{% block body %}
	<section class="container mt-2">
		<h1 class="text-center">Administration des commandes</h1>
		<table class="mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Number</th>
					<th>Status</th>
					<th>Créer</th>
					<th>Créer</th>
					<th>Créer</th>
					<th>Créer</th>

				</tr>
			</thead>
			<tbody>
				{% for order in orders %}
					<tr>
						<td>{{ order.id }}</td>
						<td>{{ order.number }}</td>
						<td>{{ order.status }}</td>
						<td>{{ order.user.fullname}}</td>
						<td>{{ order.created}}</td>
                        <td>{{ dump(order) }}</td>
                        <td>{{ delivery.price|format_currency('EUR') }}</td>


					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>
{% endblock %}
